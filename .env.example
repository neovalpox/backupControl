# BackupControl - Configuration
# Copiez ce fichier en .env et modifiez les valeurs

# ===========================================
# BASE DE DONNÉES
# ===========================================
POSTGRES_DB=backupcontrol
POSTGRES_USER=backupcontrol
POSTGRES_PASSWORD=changeme_in_production

# ===========================================
# SÉCURITÉ
# ===========================================
# Clé secrète pour JWT (générez une clé aléatoire de 32+ caractères)
SECRET_KEY=your_secret_key_here_min_32_chars

# ===========================================
# CONFIGURATION IA
# ===========================================
# Choix du provider: "claude" ou "openai"
AI_PROVIDER=claude

# Clé API Claude (Anthropic)
CLAUDE_API_KEY=your_anthropic_api_key_here

# Clé API OpenAI (ChatGPT)
OPENAI_API_KEY=

# ===========================================
# CONFIGURATION E-MAIL
# ===========================================
# Type de compte: "imap", "office365", "gmail"
EMAIL_TYPE=imap

# Configuration IMAP
IMAP_SERVER=
IMAP_PORT=993
IMAP_USE_SSL=true

# Identifiants e-mail
EMAIL_ADDRESS=
EMAIL_PASSWORD=

# Pour Office 365 (OAuth2)
OFFICE365_CLIENT_ID=your_office365_client_id
OFFICE365_CLIENT_SECRET=your_office365_client_secret
OFFICE365_TENANT_ID=your_office365_tenant_id

# Pour Gmail (OAuth2)
GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=

# ===========================================
# PLANIFICATION
# ===========================================
# Heure d'exécution de l'analyse quotidienne (0-23)
EMAIL_CHECK_HOUR=6

# Fuseau horaire
TZ=Europe/Paris

# ===========================================
# SSL / HTTPS
# ===========================================
# Domaine pour Let's Encrypt (laisser vide pour HTTP uniquement)
DOMAIN=
LETSENCRYPT_EMAIL=

# Ports (modifiez si nécessaire)
HTTP_PORT=80
HTTPS_PORT=443

# ===========================================
# NOTIFICATIONS
# ===========================================
# Webhook Discord
DISCORD_WEBHOOK_URL=

# Webhook Slack
SLACK_WEBHOOK_URL=

# Webhook Teams
TEAMS_WEBHOOK_URL=

# SMTP pour envoi d'alertes (peut être différent du compte de lecture)
SMTP_SERVER=
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USERNAME=
SMTP_PASSWORD=
ALERT_FROM_EMAIL=
ALERT_TO_EMAILS=

# ===========================================
# APPLICATION
# ===========================================
# Langue par défaut: "fr" ou "en"
DEFAULT_LANGUAGE=fr

# Thème par défaut: "light" ou "dark"
DEFAULT_THEME=dark

# Nombre de jours de rétention des logs
LOG_RETENTION_DAYS=90
